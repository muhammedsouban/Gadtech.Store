<div class="page-body">

    <!-- New Product Add Start -->
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="row">
                    <div class="col-sm-8 m-auto">
                        <div class="card mt-5">
                            <div class="card-body">
                                <div class="card-header-2">
                                    <h5>Coupon Information</h5>
                                </div>
{{#if message}}
                        <div class="alert alert-success" role="alert">
                            {{message}}
                        </div>
                    {{else if error}}
                        <div class="alert alert-danger" role="alert">
                            {{error}}
                        </div>
                    {{/if}}

                                <form action="/admin/add-coupon" class="theme-form theme-form-2 mega-form"
                                    method="post" >
                                    <div class="mb-4 row align-items-center">
                                        <label class="form-label-title col-sm-3 mb-0">Coupon Code</label>
                                        <div class="col-sm-9">
                                            <input class="form-control" type="text" placeholder="Coupon Code"
                                                name="couponcode">
                                        </div>
                                    </div>

                                          <div class="mb-4 row align-items-center">
                                        <label class="form-label-title col-sm-3 mb-0">Offer</label>
                                        <div class="col-sm-9">
                                            <input class="form-control" type="text" placeholder="Offer"
                                                name="offer">
                                        </div>
                                    </div>

                                    <div class="mb-4 row align-items-center">
                                        <label class="form-label-title col-sm-3 mb-0">Coupon Expiry Date</label>
                                        <div class="col-sm-9">
                                            <input class="form-control" type="date" placeholder="Expiry Date"
                                                name="expirydate">
                                        </div>
                                    </div>
                                    <div class="d-flex justify-content-center">
                                        <button type="submit" class="btn btn-block btn-lg"
                                            style="background-color: #282828;"><span style="color: white;">
                                                Submit</span></button>
                                    </div>
                                </form>

                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- New Product Add End -->